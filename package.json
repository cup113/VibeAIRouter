{
  "name": "vibe-ai-router",
  "version": "1.0.0",
  "description": "AI路由服务",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "start:prod": "cross-env NODE_ENV=production node dist/main.js",
    "start:dev": "cross-env NODE_ENV=development node dist/main.js",
    "clean": "rimraf dist",
    "prebuild": "pnpm run clean",
    "postbuild": "pnpm run type-check",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db": "pnpm run db-windows",
    "db-windows": ".\\db\\pocketbase.exe serve --http 0.0.0.0:4162",
    "type-gen": "pocketbase-typegen --db ./db/pb_data/data.db -o src/types/pocketbase-types.ts",
    "docker:build": "docker build -t vibe-ai-router .",
    "docker:run": "docker run -p 3000:3000 --env-file .env vibe-ai-router",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit fix"
  },
  "keywords": [
    "ai",
    "router",
    "express",
    "typescript"
  ],
  "author": "Jason Li",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/connect-history-api-fallback": "^1.5.4",
    "@types/connect-timeout": "^1.9.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "pocketbase-typegen": "latest",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "body-parser": "^2.2.2",
    "connect-timeout": "^1.9.1",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^8.2.1",
    "pocketbase": "^0.26.6",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.3.5"
  }
}
